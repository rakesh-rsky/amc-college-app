<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacultyActivity">


    <TextView
        android:id="@+id/FacultyLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#070E9F"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Faculty"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="168dp" />


    <TextView
        android:id="@+id/mechanicalTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/mybutton"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Mechanical Faculty"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/civilTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FacultyLogo" />


    <TextView
        android:id="@+id/civilTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/mybutton"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Civil Faculty"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/eeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mechanicalTextView" />


    <TextView
        android:id="@+id/eeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/mybutton"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Electrical &amp; Electronic Faculty"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/ecTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civilTextView" />


    <TextView
        android:id="@+id/ecTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/mybutton"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Electronic Communication"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/csTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eeTextView" />


    <TextView
        android:id="@+id/csTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/mybutton"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Computer Science Faculty"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/mcaTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ecTextView" />


    <TextView
        android:id="@+id/mcaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/mybutton"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text=" MCA Faculty"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/csTextView" />



</androidx.constraintlayout.widget.ConstraintLayout>